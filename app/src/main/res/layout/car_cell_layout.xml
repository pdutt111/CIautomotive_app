<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="120dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="car name"
        android:id="@+id/car_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="model"
        android:id="@+id/model"
        android:layout_alignBottom="@+id/car_name"
        android:layout_toRightOf="@+id/car_name"
        android:layout_toEndOf="@+id/car_name"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="mileage"
        android:id="@+id/mileage"
        android:layout_below="@+id/car_name"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:layout_marginLeft="10dp" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@null"
        android:adjustViewBounds="true"
        android:id="@+id/diagnostics_button"
        android:src="@mipmap/diagnostic_icon"
        android:scaleType="fitCenter"
        android:layout_alignTop="@+id/location_button"
        android:layout_toLeftOf="@+id/location_button"
        android:layout_toStartOf="@+id/location_button"
        android:layout_marginRight="20dp" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@null"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:id="@+id/location_button"
        android:src="@mipmap/location_icon"
        android:layout_alignTop="@+id/trip_button"
        android:layout_toLeftOf="@+id/trip_button"
        android:layout_toStartOf="@+id/trip_button"
        android:layout_marginRight="20dp" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@null"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:id="@+id/trip_button"
        android:src="@mipmap/trip_icon"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Mileage"
        android:id="@+id/textView2"
        android:layout_below="@+id/car_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@null"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:id="@+id/delete_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@mipmap/delete_icon"
        android:layout_marginTop="10dp" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@null"
        android:adjustViewBounds="true"
        android:id="@+id/notification_button"
        android:src="@mipmap/notification_icon"
        android:scaleType="fitCenter"
        android:layout_alignTop="@+id/diagnostics_button"
        android:layout_toLeftOf="@+id/diagnostics_button"
        android:layout_toStartOf="@+id/diagnostics_button"
        android:layout_marginRight="20dp" />

</RelativeLayout>